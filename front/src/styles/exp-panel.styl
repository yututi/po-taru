@require './palette.styl';

.exp-panel {
    &__header {
        padding: 0.5em;
    }

    &__body {
        transition: max-height 0.3s 0s ease;
        overflow: hidden;
    }
}

.exp-header {
    display: flex;
    align-items: center;
    padding: 0.5em;
    user-select: none;
    background-color: $primary;
    color: $primaryText;

    &:hover {
        cursor: pointer;
    }

    &__icon {
        font-size: 1.5em;
        transition: transform 0.3s 0s ease;
        padding-right: 0.2em;
        color: $primaryText;
    }

    &__title {
        font-size: 1.2em;
    }
}
