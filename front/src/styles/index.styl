    // }
    &:focus {
        outline: none;
    }
}

button {
    background-color: transparent;
    border-style: none;
    color: inherit;
    cursor: pointer;
}

.form {
    display: flex;
    flex-direction: column;
    padding: 0 0 1em 0;

    &__header {
        padding: 0.8em 1em;
        background-color: $primary;
        color: $primaryText;
    }

    &__field {
        padding: 0em 1em;
        margin-top: 1em;
    }

    &__action {
        padding: 0em 1em;
        margin-top: 1em;
        display: flex;
        justify-content: flex-end;

        & > button {
            font-size: 16px;
            font-weight: 100;
        }
    }

    &__separator {
        margin-top: 1em;
        border-bottom: 1px solid gainsboro;
    }
}

.app-icon {
    font-size: 20px;
    color: $accent;
    display: flex;
    align-items: center;
    justify-content: center;
    height: 50px;
    width: 50px;
}

input[type=checkbox].checkbox {
    display: none;

    & + label {
        display: block;
        position: relative;
        padding-left: 1.5em;
        user-select: none;
        cursor: pointer;
        overflow: hidden;
        white-space: nowrap;
        text-overflow: ellipsis;

        &:before {
            position: absolute;
            left: 0px;
            content: '';
            transform: rotate(40deg);
            border-right: 3px solid $accent;
            border-bottom: 3px solid $accent;
            width: 0.3em;
            height: 0.5em;
            text-align: center;
            margin-left: 0.33em;
            margin-top: 0.1em;
            opacity: 0;
            transition: opacity 0.2s;
        }

        &:after {
            position: absolute;
            left: 0px;
            content: '';
            border: 1px solid gainsboro;
            width: 1em;
            height: 1em;
            border-radius: 2px;
        }
    }
}

input[type=checkbox]:checked.checkbox {
    & + label {
        &:before {
            opacity: 1;
        }

        &:after {
            border: 1px solid $accent;
        }
    }
}