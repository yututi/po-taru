@require './normalize.styl';
@require './base.styl';
@require './palette.styl';

$navWidth = 250px;
$headerHeight = 60px;

.app {
    display: flex;
    flex-direction: column;
    position: relative;
    height: 100vh;

    &__header {
        border-bottom: solid 1px gainsboro;
        height: $headerHeight;
        z-index: 1;
    }

    &__sidenav {
        position: fixed;
        transform: translateX(-1 * $navWidth);
        top: 0;
        left: 0;
        width: $navWidth;
        height: 100%;
        border-right: solid 1px gainsboro;
        transition: transform 0.3s;
        background-color: $bgColor;

        +pc() {
            margin-top: $headerHeight;
        }

        &--show-pc {
            +pc() {
                transform: translateX(0);

                & + .app__body {
                    margin-left: $navWidth;
                }
            }
        }

        &--show-sp {
            +sp() {
                transform: translateX(0);
                z-index: 999;

                & + .app__body {
                    &:after {
                        content: '';
                        position: fixed;
                        top: 0;
                        left: 0;
                        height: 100vh;
                        width: 100vw;
                        background-color: rgba(0, 0, 0, 0.1);
                        z-index: 998;
                    }
                }
            }
        }
    }

    &__body {
        flex: 1;
        transition: margin-left 0.3s;
        overflow-y: auto;
    }
}

.sidenav {
}

.header {
    display: flex;
    align-items: center;
    position: relative;

    &__icon {
        font-size: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: $accent;
        padding: 12px;
        text-decoration: none;
        border-radius: 50%;
        box-sizing: border-box;
        transition: background-color 0.3s;
        margin: 0 5px;
        height: 50px;
        width: 50px;
        cursor: pointer;

        &:active {
            background-color: gainsboro;
        }
    }

    &__title {
        font-size: 2em;
        font-weight: 100;
        color: $primary;
        flex: 1;
        text-align: left;
    }
}

.header {
    position: relative;

    &--progress.progress-bar {
        &:after {
            position: absolute;
            content: '';
            top: 100%;
            height: 2px;
            animation: progress-repeat 0.8s 0s infinite;
            background-color: $accent;
        }
    }
}

@keyframes progress-repeat {
    0% {
        left: 0px;
        width: 0px;
    }

    50% {
        left: 0px;
        width: 100%;
    }

    100% {
        left: 100%;
        width: 0px;
    }
}

.button {
    border: none;
    border-radius: 0.2em;
    background-color: $primary;
    padding: 0.2em 0.5em;
    color: $primaryText;
    position: relative;
    user-select: none;
    cursor: pointer;

    // &:active::after {
    // content: '';
